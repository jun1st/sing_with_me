<h1>All Songs</h1>
 
<table class="table">
  <thead>
    <tr>
    	<th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @songs.each do |song| %>
      <tr>
      	<td scope="row"><%= song.id %></td>
        <td><%= song.name %></td>
        <td><%= link_to "所有唱本", song_sings_path(song) %></td>
        <td><%= link_to "添加唱本", new_song_sing_path(song) %></td>
        <td><%= link_to "Edit", edit_song_path(song) %></td>
        <td><%= link_to "Destroy", song, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
